{
  "name": "@map-colonies/telemetry",
  "version": "1.1.0",
  "description": "Package for everything opentelemetry related in map colonies",
  "main": "./dist/index.js",
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "jest --config=./tests/configurations/jest.config.js",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/telemetry.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/telemetry/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/MapColonies/telemetry#readme",
  "dependencies": {
    "@opentelemetry/api": "1.0.0-rc.0",
    "@opentelemetry/exporter-collector": "0.19.0",
    "@opentelemetry/instrumentation": "^0.19.0",
    "@opentelemetry/metrics": "^0.19.0",
    "@opentelemetry/node": "^0.19.0",
    "@opentelemetry/tracing": "^0.19.0",
    "@types/pino": "^6.3.7",
    "env-var": "^7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@opentelemetry/context-async-hooks": "^0.19.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@map-colonies/eslint-config": "^2.2.0",
    "@types/faker": "^5.5.3",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.12",
    "commitlint": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.1",
    "faker": "^5.5.3",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "jest-create-mock-instance": "^1.1.0",
    "jest-html-reporters": "^2.1.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}

{
  "name": "@map-colonies/telemetry",
  "version": "3.1.0",
  "description": "Package for everything opentelemetry related in map colonies",
  "main": "./dist/index.js",
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/telemetry.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/telemetry/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/MapColonies/telemetry#readme",
  "dependencies": {
    "@opentelemetry/api": "^1.0.4",
    "@opentelemetry/exporter-collector": "^0.25.0",
    "@opentelemetry/instrumentation": "^0.27.0",
    "@opentelemetry/metrics": "^0.24.0",
    "@opentelemetry/node": "^0.24.0",
    "@opentelemetry/sdk-metrics-base": "^0.27.0",
    "@opentelemetry/tracing": "^0.24.0",
    "@types/pino": "^7.0.5",
    "env-var": "^7.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@map-colonies/eslint-config": "^2.2.1",
    "@opentelemetry/context-async-hooks": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/faker": "^6.6.9",
    "@types/node": "^14.14.12",
    "commitlint": "^16.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "standard-version": "^9.3.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  }
}
